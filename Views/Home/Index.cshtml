            <input type="checkbox" id="vehicle2" name="vehicle2" value="C">
            <label for="vehicle2"> C </label><br>
            <input type="checkbox" id="vehicle3" name="vehicle3" value="Java">
            <label for="vehicle2"> Java </label><br>
            <input type="checkbox" id="vehicle3" name="vehicle3" value="Python">
            <label for="vehicle2"> Python </label><br>
            <input type="checkbox" id="vehicle3" name="vehicle3" value="C#">
            <label for="vehicle2">C#</label><br>
            <input type="checkbox" id="vehicle3" name="vehicle3" value="Dart">
            <label for="vehicle3"> Dart </label><br>
            <input type="checkbox" id="vehicle3" name="vehicle3" value="React Native">
            <label for="vehicle3"> React Native</label><br>
            <input type="checkbox" id="vehicle3" name="vehicle3" value="PHP">
            <label for="vehicle3"> PHP</label><br>
