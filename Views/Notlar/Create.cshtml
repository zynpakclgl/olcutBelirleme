@model olcutBelirleme.Models.NotlarClass

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NotlarClass</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Notpuani" class="control-label"></label>


                <input type="radio" name="Notpuani" value="2,0 - 2,5" />2,5
