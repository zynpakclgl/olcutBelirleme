                <input type="radio" name="Notpuani" value="23,0 - 3,5" />3,5
                <input type="radio" name="Notpuani" value="3,5 - 4,0" />4,0

                <span asp-validation-for="Notpuani" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <b>@ViewBag.message</b>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
